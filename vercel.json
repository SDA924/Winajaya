{
  "version": 2,
  "builds": [
    {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
      {
          "src": "/(.*)",
          "dest": "/client/dist/$1"
        },
        {
          "src": "/api/(.*)",
          "dest": "/api/server.js"
        }
  ]
}